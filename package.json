{
  "name": "ase-prerequisite-test-nodejs",
  "version": "1.0.0",
  "description": "Cloud Development ASE Prerequisite Test for Node.js",
  "main": "index.js",
  "scripts": {
    "lint": "eslint src",
    "test": "mocha",
    "pretest": "npm run lint",
    "test:developer": "mocha --ignore test/hackathon.test.ts",
    "test:hackathon": "mocha --ignore test/developer.test.ts",
    "watch": "nodemon --exec mocha",
    "coverage": "c8 --reporter=lcov --reporter=text mocha",
    "build": "rimraf dist && tsc"
  },
  "repository": {
    "type": "git",
    "url": "https://github.tools.sap/cloud-curriculum/ase-prerequisite-test-nodejs"
  },
  "author": "Agile & Cloud Development Competence",
  "license": "SAP SE",
  "devDependencies": {
    "@tsconfig/node20": "^20.1.0",
    "@types/chai": "^4.3.5",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.4.6",
    "@typescript-eslint/eslint-plugin": "^6.2.1",
    "@typescript-eslint/parser": "^6.2.1",
    "c8": "^8.0.1",
    "chai": "^4.3.7",
    "eslint": "^8.46.0",
    "mocha": "^10.2.0",
    "nodemon": "^3.0.1",
    "rimraf": "^5.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  },
  "engines": {
    "node": "^20",
    "npm": "^9"
  },
  "mocha": {
    "extension": [
      "ts"
    ],
    "spec": [
      "test/**/*.test.ts"
    ],
    "require": "ts-node/register"
  },
  "nodemonConfig": {
    "watch": [
      "src",
      "test"
    ],
    "ext": "js,json,ts"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:@typescript-eslint/eslint-recommended"
    ],
    "plugins": [
      "@typescript-eslint"
    ],
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "rules": {
      "no-trailing-spaces": "warn",
      "eol-last": [
        "error",
        "always"
      ],
      "no-multiple-empty-lines": [
        "error",
        {
          "max": 2,
          "maxEOF": 1
        }
      ]
    },
    "ignorePatterns": [
      "dist"
    ],
    "root": true
  }
}
